@model APStore.Models.Entities.ProductCategory

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Danh mục sản phẩm</h6>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    @*@Html.ActionLink("New", "Create", "ProductCategory", null, new { @class = "btn btn-sm btn-neutral" })*@
                    @*<a href="#" class="btn btn-sm btn-neutral">New</a>*@
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h3 class="mb-0">Thêm danh mục</h3>
                        </div>
                        <div class="col-4 text-right">
                            @Html.ActionLink("Danh sách thư mục","Index","ProductCategory",null,new { @class= "btn btn-sm btn-primary" })
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                        <div class="form-group mb-3">
                            <div class="input-group input-group-merge input-group-alternative">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="ni ni-caps-small"></i></span>
                                </div>
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Nhập Tên danh mục", @type = "text" })
                            </div>
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary my-4">Thêm thư mục</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
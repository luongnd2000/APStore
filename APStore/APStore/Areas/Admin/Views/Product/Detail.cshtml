@model APStore.Models.Entities.Product

@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Sản phẩm</h6>
                </div>
                <div class="col-lg-6 col-5 text-right">
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h3 class="mb-0">Thêm sản phẩm</h3>
                        </div>
                        <div class="col-4 text-right">
                            @Html.ActionLink("Danh sách sản phẩm", "Index", "Product", null, new { @class = "btn btn-sm btn-primary" })
                        </div>
                    </div>
                </div>
                <div class="card-body">
                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.Name)
                            <div class="input-group input-group-merge input-group-alternative">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="ni ni-caps-small"></i></span>
                                </div>
                                <div class="form-control text-box single-line">
                                    
                                @Model.Name
                                </div>
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.ImagePath)
                            <div>
                                <img src="@Model.ImagePath" alt="Alternate Text" class="col-sm-4" />
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.Price)
                            <div class="input-group input-group-merge input-group-alternative">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="ni ni-caps-small"></i></span>
                                </div>
                                <div class="form-control text-box single-line">
                                    @Model.Price.ToString("#,##0.00")
                                </div>
                            </div>
                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.CategoryID)
                            <div class="input-group input-group-merge input-group-alternative">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="ni ni-caps-small"></i></span>
                                </div>
                                <div class="form-control text-box single-line">
                                    @Model.CategoryNameDisplay
                                </div>
                            </div>
                        <div class="form-group mb-3">
                        </div>

                </div>
            </div>
        </div>
    </div>
</div>
